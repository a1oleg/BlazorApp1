@page "/counter"
@using BlazorApp1.Data


@foreach (string s in reqFields.Keys)
{
    @s

    <ValueForm dirName=@s OnSubmitCallback="@AddValue"/>
}

<DirForm OnSubmitCallback="@AddDir" />

@code {


    public Dictionary<string, string> reqFields { get; set; } = new Dictionary<string, string>();


    void AddDir(string item)
    {
        reqFields[item] = item;

    }

    void AddValue(string item)
    {
        reqFields.Add(item, null);
    }


}


